    <p id="out">........0.0</p>
    <button type="button" onclick="count()">Invia</button>
    <script>
      let i = 0;
      let start = Date.now();
      function count() {
        document.getElementById("out").innerHTML =
          "Done in " + (Date.now() - start) + " ms";
          document.getElementById("box").style.backgroundColor="red";
      }
    </script>
