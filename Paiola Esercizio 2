<html>
  <head>
    <style>
      #giallo{
        left: 210px;
        top: 50px;
        background-color: yellow;
        color: black;
        position: absolute;
        height: 100px;
        width: 100px;
        text-align: center;
        font-size: 20px;
        border-width: 1px;
        border: solid black;
    }

      #blu{
        left: 210px;
        top: 50px;
        background-color: blue;
        color: black;
        position: absolute;
        height: 100px;
        width: 100px;
        text-align: center;
        font-size: 20px;
        border-width: 1px;
        border: solid black;
    }
    </style>
  </head>
  <body onload="inizia()">

    <div id="giallo"></div>
    <div id="blu"></div>

   <script>
    function inizia() {
        var b = document.getElementById('giallo');
        var a = document.getElementById('blu');
        var xprec;
        var yprec;
        setInterval(function() {
            y = parseInt(Math.random() * 200);
            giallo.style.left = y;
            x = parseInt(Math.random() * 200);
            giallo.style.top = x;

            xprec = x;
            yprec = y;

            y = parseInt(Math.random() * 200);
            blu.style.left = y;
            x = parseInt(Math.random() * 200);
            blu.style.top = x;
            if (xprec - x > 100  x - xprec > 100  yprec - y > 100 || y - yprec > 100) {
                giallo.style.backgroundColor = 'yellow';
                blu.style.backgroundColor = 'blue';
            } else {
                giallo.style.backgroundColor = 'red';
                blu.style.backgroundColor = 'red';
            }
        }, 1000);
    }
</script>

  </body>
</html>
